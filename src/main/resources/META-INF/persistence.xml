<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="whouse">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>ua.mind.warehouse.domain.entities.storage.Commodity</class>
        <class>ua.mind.warehouse.domain.entities.user.User</class>
        <class>ua.mind.warehouse.domain.entities.Order</class>
        <class>ua.mind.warehouse.domain.entities.Store</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/whouse"/>
            <property name="javax.persistence.jdbc.user" value="mind"/>
            <property name="javax.persistence.jdbc.password" value="medusa"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>